{
	"name": "SiteMinder",
	"version": "1.0",
	"description": "SiteMinder Chrome Extension",
	"permissions": [
		"activeTab", 
		"declarativeContent", 
		"storage",
		"https://app.siteminder.com/"
	],
	"background": {
	  "scripts": ["background.js"],
	  "persistent": false
	},

	"options_page": "options.html",
	"browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
      }
    },
    "icons": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
	"manifest_version": 2
}
